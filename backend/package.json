{
  "name": "recipes-backend",
  "version": "1.0.0",
  "description": "Node.js + Express + MongoDB API for recipes application",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "start": "node ./src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run build-docs",
    "build-docs": "redocly bundle docs/openapi.yaml --ext json -o docs/swagger.json",
    "preview-docs": "redocly preview-docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eXocriador/recipes-fullstack.git"
  },
  "keywords": [
    "recipes",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "eXocriador",
  "license": "MIT",
  "dependencies": {
    "@redocly/cli": "^2.0.7",
    "bcrypt": "^6.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "joi": "^18.0.1",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
